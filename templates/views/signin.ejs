<body>
    <%- include('../partials/header') %>
    <div id="signinp">
        <form action="/signin" method="post" name="mysignin" id="signinf">
            <h2 id="myheadin">SignIn</h2>
            <label for="email" id="emaillabel">Email</label><br>
            <input type="email" name="email" id="myemailin" required>
            <br><br>
            <label for="password" id="passlabel">Password</label><br>
            <input type="password" name="password" id="mypassin"  minlength="8" required>
            <br><br>
            <span class="formerror" id="passwordin"> 
                <%if(info.length>0){%>
                <%= info %><% }%> 
            </span>
            <br>
            <button type="submit" id="mybutnin" onclick="clersc()">SignIn</button>
        </form>
        <form action="/signup" method="get" id="reversein">
            <p>Dont have an account?  <button type="submit" id="revbtnin">Create one</button></p> 
        </form>
    </div>
    <div class="copy">
        <footer class="copyright">copyright Â© 2023 all rights reserved</footer>
    </div>
</body>
